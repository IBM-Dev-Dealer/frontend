{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:json/recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended",
    "prettier",
    "next/core-web-vitals"
  ],
  "parser": "@babel/eslint-parser",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-hooks", "prettier", "unused-imports"],
    "rules": {
      "no-unused-vars": "off",
      "unused-imports/no-unused-imports": "error",
      "unused-imports/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "tabWidth": 2,
          "printWidth": 100,
          "singleQuote": false,
          "trailingComma": "all",
          "jsxSingleQuote": true,
          "parser": "flow",
          "endOfLine": "auto",
          "usePrettierrc": true,
          "semi": true,
          "bracketSpacing": true
        }
      ],
      "eol-last": "error",
      "max-len": ["off", { "code": 200 }],
      "indent": "off",
      "no-duplicate-imports": "warn",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [".js", ".jsx"]
        }
      ],
      "react/prop-types": "off",
      "sort-imports": [
        "warn",
        {
          "ignoreCase": false,
          "ignoreDeclarationSort": true,
          "ignoreMemberSort": false
        }
      ]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "18.2.0"
    }
  }
}
